@model IEnumerable<Application.ViewModels.ProductViewModel>




@if (Model.Count() > 0)
{

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Product Name</th>
            <th scope="col">Product Price</th>
        </tr>
    </thead>
    <tbody>
        @for(var counter = 0;counter < Model.Count();counter++)
        {
            <tr>
                <td>@Model.ToList()[counter].ProductName</td>
                <td>@Model.ToList()[counter].ProductPrice</td>
            </tr>
        }
    </tbody>
</table>
}
else 
{
    <p>There is no items in DB</p>
}
