@model Application.ViewModels.ProductViewModel

<form method="POST" asp-action="PostCreate">
    <div class="form-group">
        <input  class="form-control" asp-for="ProductName"  aria-describedby="emailHelp" placeholder="Enter name">
    </div>
    <div class="form-group">
        <input asp-for="ProductPrice" class="form-control" placeholder="Enter price">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
