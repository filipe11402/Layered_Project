@model Application.ViewModels.ProductViewModel

<form asp-action="PostUpdate" method="POST">
    <input asp-for="ProductId" hidden readonly />
    <div class="form-group">
        <input class="form-control" asp-for="ProductName" placeholder="@Model.ProductName">
    </div>
    <div class="form-group">
        <input class="form-control" asp-for="ProductPrice" placeholder="@Model.ProductPrice">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
